{
  "compilerOptions": {
    "target": "es2017",                   // Suitable JS version
    "module": "commonjs",                 // For Node.js module system
    "outDir": "build",                    // Where compiled JS goes (Render runs this)
    "rootDir": "src",                     // Your TypeScript source folder
    "strict": true,                       // Enable all strict type checks
    "esModuleInterop": true,              // Allow CommonJS module compatibility
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                  // Speeds up build by skipping .d.ts checks
  },
  "include": ["src"],                     // Only compile code inside src/
  "exclude": ["node_modules", "build"]    // Donâ€™t compile these folders
}
